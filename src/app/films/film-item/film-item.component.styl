@import "vars.styl"

.film

  &__title
    font-size 20px
    font-weight 400
    margin 16px 0 0

  &__image
    position relative
    width 100%
    height 370px
    background no-repeat center
    background-size cover
    border-radius 8px

    &:hover

      .film__description
        visibility: visible

  &__description
    visibility hidden
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border-radius inherit
    padding 16px
    font-size 16px
    font-weight 400
    line-height 140%
    color $main-light-gray
    background-color $main-black-overlay
