.films-category

  &__title
    font-size 24px
    font-weight 500
    margin 0

  &__grid
    display grid
    grid-template-columns repeat(1, 1fr)
    grid-gap 20px
    margin-top 16px

    @media (min-width 768px)
      grid-template-columns repeat(2, 1fr)

    @media (min-width 1024px)
      grid-template-columns repeat(4, 1fr)
