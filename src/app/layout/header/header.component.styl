@import "vars.styl"

.header

  &__inner
    display grid
    grid-template-columns repeat(2, 1fr)
    grid-row-gap 15px
    justify-content space-between
    padding 32px 0

    @media (min-width 768px)
      display flex

  &__login
    display flex
    align-items center
    justify-content flex-end

    @media (min-width 768px)
      justify-content unset

  &__user
    grid-row 1

    @media (min-width 768px)
      grid-row unset

    &-name
      appearance none
      border none
      background-color transparent
      font-weight 500
      font-size 16px
      cursor pointer

.logo
  display flex
  align-items center

  &__text
    display: none
    font-weight 500
    font-size 20px
    margin-left 12px

    @media (min-width 768px)
      display block

.search
  grid-row 2
  grid-column 1/3

  @media (min-width 768px)
    grid-row unset
    grid-column unset

  &__input
    width 220px

    @media (min-width 768px)
      width 100px

    @media (min-width 1024px)
      width 320px

