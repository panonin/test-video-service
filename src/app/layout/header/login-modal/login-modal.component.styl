@import "vars.styl"

.modal
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 10

  &__overlay
    display flex
    justify-content center
    align-items center
    width 100%
    height 100%
    background-color $main-light-overlay
    overflow-y auto
    padding 50px 0
    
  &__content
    width 304px
    padding 36px
    border-radius 8px
    background-color $white

  &__title
    font-size 28px
    font-weight 500
    margin 0 0 24px
    text-align center

.login-form
  display flex
  flex-direction column

  &__input
    margin-bottom 24px

  &__button
    width fit-content
    margin 111px auto 0
