@import "vars.styl"

.channels

  &__inner
    height 782px
    overflow-y auto
    margin-right -16px
    padding-right 8px

    @media (min-width 768px)
      height 696px

    &::-webkit-scrollbar 
      width 8px
      background $main-light-gray
      border-radius 2px
    
    &::-webkit-scrollbar-thumb 
      border 2px solid rgba(0, 0, 0, 0)
      background-clip padding-box
      background-color $main-gray
      border-radius 12px

.channels-item
  display block
  align-items center
  height 250px
  padding 15px
  background-color $main-light-gray
  border-radius 8px

  @media (min-width 768px)
    display flex
    height 162px
    padding 0

  & + &
    margin-top 16px

  &__left
    width 100%
    margin-bottom 15px

    @media (min-width 768px)
      width 35%
      margin 0

  &__image
    display block
    margin auto

  &__name
    font-size 20px
    font-weight 500
    margin 0 0 17px

.channel-broadcast
  display flex
  font-size 16px
  font-weight 400

  & + &
    margin-top 12px

  &_active

    span
     color $main-red

  &__time
    margin-right 16px
