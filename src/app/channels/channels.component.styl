@import "vars.styl"

.channels

  &__inner
    display grid
    grid-gap 16px
    height 782px
    overflow-y auto
    margin-right -16px
    padding-right 8px

    @media (min-width 768px)
      height 696px

    &::-webkit-scrollbar 
      width 8px
      background $main-light-gray
      border-radius 2px
    
    &::-webkit-scrollbar-thumb 
      border 2px solid rgba(0, 0, 0, 0)
      background-clip padding-box
      background-color $main-gray
      border-radius 12px
